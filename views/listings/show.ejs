<%- layout("layouts/boilerplate.ejs") -%>
<script>
  window.username = "Phill";
  window.coordinates = <%- JSON.stringify(data.geometry.location)%>
</script>

<body>
  <div class="row mt-3">
    <div class="col-lg-8 offset-lg-2">
      <h3 class="mb-3"><%= data.title %></h3>
    </div>

    <!-- Listing card -->
    <div class="col-lg-8 offset-lg-2">
      <div class="card shadow-sm rounded-4 overflow-hidden">
        <img src="<%= data.image.url %>" 
             class="card-img-top" 
             alt="listing_image" 
             style="height: 360px; object-fit: cover;">

        <div class="card-body">
          <p class="card-text">Owned By: <%= data.owner.username %></p>
          <p class="card-text"><%= data.description %></p>
          <p class="card-text">&#36;<%= data.price.toLocaleString("en-US") %></p>
          <p class="card-text"><%= data.location %></p>
          <p class="card-text"><%= data.country %></p>

          <% if(userstatus && data.owner._id.equals(userstatus._id)){ %>
          <div class="d-flex gap-2 mt-3">
            <a href="/listings/<%= data._id %>/edit" class="btn btn-danger px-4">Edit</a>
            <form method="POST" action="/listings/<%= data._id %>?_method=DELETE" class="m-0">
              <button class="btn btn-dark px-4" onclick="return confirm('Delete this listing?')">Delete</button>
            </form>
          </div>
          <% } %>

          <% if(userstatus){ %>
          <hr class="my-4">
          <h4 class="h5 mb-3">Leave a Review</h4>

          <form method="POST"
                action="/listings/<%= data._id %>/reviews"
                class="needs-validation"
                novalidate>
            
            <div class="mb-3"> 
              <label for="rating" class="form-label mb-2">Rating</label>
              <fieldset class="starability-slot" id="rating-fieldset">
                <!-- 1 Star -->
                <input type="radio" id="rate1" name="review[rating]" value="1" required />
                <label for="rate1" title="Terrible">1 star</label>

                <!-- 2 Stars -->
                <input type="radio" id="rate2" name="review[rating]" value="2" />
                <label for="rate2" title="Not good">2 stars</label>

                <!-- 3 Stars -->
                <input type="radio" id="rate3" name="review[rating]" value="3" />
                <label for="rate3" title="Average">3 stars</label>

                <!-- 4 Stars -->
                <input type="radio" id="rate4" name="review[rating]" value="4" />
                <label for="rate4" title="Very good">4 stars</label>

                <!-- 5 Stars -->
                <input type="radio" id="rate5" name="review[rating]" value="5" />
                <label for="rate5" title="Amazing">5 stars</label>
              </fieldset>
              <div class="invalid-feedback" id="ratingError" style="display:none">
                You need to pick a star
              </div>
            </div>


            <div class="mb-3">
              <label for="comment" class="form-label mb-1">Comments</label>
              <textarea
                id="comment"
                name="review[comment]"
                rows="4"
                class="form-control"
                placeholder="Share your experience..."
                required></textarea>
              <div class="invalid-feedback">Please leave a review.</div>
            </div>

            <button type="submit" class="btn btn-outline-dark">Submit</button>
          </form>
          <% } %>

          <hr class="my-4">
          <h4 class="h5 mb-3">All Reviews</h4>

          <% if (data.review && data.review.length) { %>
            <div class="row row-cols-1 row-cols-md-2 g-3">
              <% for (const review of data.review) { %>
                <div class="col">
                  <div class="card shadow-sm h-100">
                    <div class="card-body">
                      <h6 class="card-title mb-2">@<%= review.author.username %></h6>
                      
                      <div class="review-stars mb-2">
                        <div class="starability-result" data-rating="<%= review.rating %>"></div>
                      </div>
                      
                      <p class="card-text mb-2"><%= review.comment %></p>

                      <% if (review.author._id.equals(userstatus._id)) { %>
                        <form class="mb-3" method="POST" action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE">
                          <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                      <% } %>
                      
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          <% } else { %>
            <div class="alert alert-light border d-flex align-items-center" role="alert">
              <div>There arenâ€™t any reviews yet.</div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>



<div class="col-12 mb-3">
  <h5 style="text-align:left;">Where you'll be</h5>
  <div id="map" style="height:400px; width:100%; border-radius:10px;"></div>
</div>



<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=<%=process.env.GOOGLE_MAP_API_KEY%>&callback=initMap">
</script>

<script src="/javascripts/map.js"></script>


<script>
  document.querySelector("form.needs-validation").addEventListener("submit", function(e) {
  const stars = document.querySelectorAll('input[name="review[rating]"]');
  const error = document.getElementById("ratingError");
  let checked = false;

  stars.forEach(star => {
    if (star.checked) checked = true;
  });

  if (!checked) {
    e.preventDefault(); // stop form submission
    error.style.display = "block";
  } else {
    error.style.display = "none"; // hide if fixed
  }
});

</script>